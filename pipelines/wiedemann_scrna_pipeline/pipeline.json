{
  "id": "wiedemann_scrna_pipeline",
  "name": "Wiedemann single cell RNA-Seq pipeline",
  "version": "0.1.52",
  "description": "<espe-import>pipeline_description.html</espe-import>",
  "global_variables": [],
  "steps": [
    {
      "id": "preprocessing",
      "name": "Preprocessing",
      "description": "<espe-import>step_preprocessing_description.html</espe-import>",
      "container": "preprocessing",
      "dependencies": [],
      "variables": []
    },
    {
      "id": "ambient_rna_removal",
      "name": "Ambient RNA removal",
      "description": "<espe-import>step_ambient_rna_removal_description.html</espe-import>",
      "container": "ambient_rna",
      "dependencies": ["preprocessing"],
      "variables": [
        {
          "id": "SKIP",
          "name": "Skip ambient RNA removal",
          "description": "Skip adjusting the feature counts for ambient RNA / background. This might be desirable for pre-filtered samples or fixed scRNA-Seq data, where the low ambient RNA content leads to bad inference of the contamination fraction. Non-informative genes are still filtered out.",
          "category": {
            "tag": "Boolean"
          }
        }
      ]
    },
    {
      "id": "doublet_detection",
      "name": "Doublet detection",
      "description": "<espe-import>step_doublet_detection_description.html</espe-import>",
      "container": "doublet_detection",
      "dependencies": ["preprocessing", "ambient_rna_removal"],
      "variables": []
    },
    {
      "id": "doublet_removal",
      "name": "Doublet removal",
      "description": "<espe-import>step_doublet_removal_description.html</espe-import>",
      "container": "doublet_removal",
      "dependencies": ["doublet_detection"],
      "variables": []
    },
    {
      "id": "integration",
      "name": "Integration",
      "description": "<espe-import>step_integration_description.html</espe-import>",
      "container": "integration",
      "dependencies": ["doublet_removal"],
      "variables": []
    },
    {
      "id": "normalisation",
      "name": "Normalisation",
      "description": "<espe-import>step_normalisation_description.html</espe-import>",
      "container": "normalisation",
      "dependencies": ["integration"],
      "variables": []
    },
    {
      "id": "feature_selection",
      "name": "Feature selection",
      "description": "<espe-import>step_feature_selection_description.html</espe-import>",
      "container": "feature_selection",
      "dependencies": ["normalisation"],
      "variables": []
    },
    {
      "id": "clustering_base",
      "name": "Clustering",
      "description": "<espe-import>step_clustering_base_description.html</espe-import>",
      "container": "clustering_base",
      "dependencies": ["feature_selection"],
      "variables": []
    },
    {
      "id": "marker_expression",
      "name": "Marker expression",
      "description": "<espe-import>step_marker_expression_description.html</espe-import>",
      "container": "marker_expression",
      "dependencies": ["clustering_base"],
      "variables": []
    }
  ]
